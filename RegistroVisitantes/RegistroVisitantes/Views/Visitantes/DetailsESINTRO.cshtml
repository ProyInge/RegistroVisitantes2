            </div>

            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.TEL_EMERGENCIA, @ViewResources.Resources.oet_telefono + ":", htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.TEL_EMERGENCIA, (String)ViewBag.sexo, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", @readonly = "readonly" } })
