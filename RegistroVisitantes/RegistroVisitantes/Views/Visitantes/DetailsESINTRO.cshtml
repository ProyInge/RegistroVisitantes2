        </div>
        <div class="container">
            <h2 style="border-bottom:8px solid #FDBB30">@ViewResources.Resources.es_como</h2>
            <br />

            <div class="form-group col-sm-6">
                @*@Html.LabelFor(model => model.COMOENTERO,  htmlAttributes: new { @class = "control-label col-md-2" })*@
                @Html.EditorFor(model => model.COMO_ENTERO, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.COMO_ENTERO, "", new { @class = "text-danger" })
            </div>
        </div>


    </div>
    <div class="container">
        <h2 style="border-bottom:8px solid #FDBB30">@ViewResources.Resources.oet_waiverTitulo</h2>
        <div class="well" style="font-size:medium">
            @ViewResources.Resources.oet_waiver
        </div>
    </div>
</div>

<p>
    @Html.ActionLink(@ViewResources.Resources.editar, "EditESINTRO", new { idRes = Model.ID_RESERVACION, ced = Model.CEDULA })
</p>
