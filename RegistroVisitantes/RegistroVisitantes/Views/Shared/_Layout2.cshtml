<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <!--@Styles.Render("~/Content/Anterior.css")-->
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header style="position: absolute; background-color: #7BC143; width: 100%; height:100px; top: 0px">
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <img src="~/Content/logo.png" style="float: left;height: 80px;" />
                </p>
            </div>
        </div>
    </header>
    <div class="navbar navbar-default" id="menu" role="navigation" style="position:relative; width:100%; height: 50px; top:50px; background: linear-gradient(#60a52a, #9dce76, #60a52a); border-color: #60a52a; border-radius: 0px">
        
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - RegistroVisitantes</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
