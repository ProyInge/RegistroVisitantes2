<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Registro de Visitantes</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")

    <!--@Styles.Render("~/Content/Anterior.css")-->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <header style="position: absolute; background-color: #7BC143; width: 100%; height:100px; top: 0px">
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">
                    <img src="~/Content/logo.png" style="float: left;height: 80px;" />
                </p>
            </div>
        </div>
    </header>

    <div class="navbar navbar-default" id="menu" role="navigation" style="position:relative; width:100%; height: 50px; top:50px; background: linear-gradient(#60a52a, #9dce76, #60a52a); border-color: #60a52a; border-radius: 0px">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>  
                </button>
                @Html.ActionLink("Registro de Visitantes", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("Reservas", "Index", "Reservas")</li>
                    <li>@Html.ActionLink("Visitantes", "Index", "Visitantes")</li>
                    <li>@Html.ActionLink("Formulario", "Registro", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2016 - RegistroVisitantes</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
