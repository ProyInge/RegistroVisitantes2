@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated && Session["Id"]!=null)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()
    <ul class="nav navbar-nav navbar-right">
        @if((string)Session["Rol"]!="R") {
            <li>
                @Html.ActionLink("Bienvenid" + Session["Genero"] + " a " + Session["Estacion"] + " (" + Session["Siglas"] + ")", "Index", "Reservas")
            </li>  
        }      
        <li>
            @Html.ActionLink("" + Session["Nombre"] + " " + Session["Apellido"] + "", "Administracion", "Usuario", routeValues: new { @idUsr = Session["Id"], @returnUrl = Request.Url.PathAndQuery }, htmlAttributes: new { title = "Administracion" })
        </li>
        <li>
            @Html.ActionLink("Cerrar sesión", "Login", "Usuario", routeValues: new { @returnUrl = Request.Url.PathAndQuery }, htmlAttributes: new { title = "Login" })
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Usuario", routeValues: new { @returnUrl = Request.Url.PathAndQuery  }, htmlAttributes: new { id = "Login" })</li>
    </ul>
}
